@using Domain.Weekdays;
@model List<WeekdayDTO>

@{
    ViewData["Title"] = "Weekdays";
}

<br />
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="leave-comment">
                    <div class="section-title">
                        <h2>INFORMACIÓN DE LOS DÍAS DE LA SEMANA</h2>
                        <span>LISTADO</span>
                        <br />
                        <br />
                        <a asp-controller="Weekdays" asp-action="Create" class="primary-btn btn-normal appoinment-btn">
                            <i class="bg-info bi-file-plus-fill"></i>Registrar Día
                        </a>
                        <br />
                        <br />
                    </div>

                    <table id="weekdays" class="table table-striped table-hover" style="color: white;">
        
                        <thead>
                            <tr class="border-bottom">
                                <th>ID Día</th>
                                <th>Día</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var weekday in Model)
                            {
                                <tr>
                                    <td>@weekday.Id</td>
                                    <td>@weekday.Dia</td>
                                    <td>
                                        <a class="btn btn-info" asp-action="Update" asp-route-id="@weekday.Id">Editar</a>
                                        <a type="button" class="btn btn-danger" asp-controller="Weekdays" asp-action="Delete" asp-route-id="@weekday.Id">Borrar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
