@using Domain.Machines;
@model List<MachineDTO>

@{
    ViewData["Title"] = "Machines";
}

<br />
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="leave-comment">
                    <div class="section-title">
                        <h2>INFORMACIÓN DE LAS MAQUINAS</h2>
                        <span>LISTADO</span>
                        <br />
                        <br />
                        <a asp-controller="Machines" asp-action="Create" class="primary-btn btn-normal appoinment-btn">
                            <i class="bg-info bi-file-plus-fill"></i>Registrar Maquina
                        </a>
                        <br />
                        <br />
                    </div>
                    <table id="machines" class="table table-striped table-hover" style="color: white;">
                        <thead>
                            <tr class="border-bottom">
                                <th>Codigo</th>
                                <th>Nombre</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var machine in Model)
                            {
                                <tr>
                                    <td>@machine.Codigo</td>
                                    <td>@machine.Nombre</td>
                                    <td>
                                        <a class="btn btn-info" asp-action="Update" asp-route-id="@machine.Id">Editar</a>
                                        <a type="button" class="btn btn-danger" asp-controller="Machines" asp-action="Delete" asp-route-id="@machine.Codigo">Borrar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

