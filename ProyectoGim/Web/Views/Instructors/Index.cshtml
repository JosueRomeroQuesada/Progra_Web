@using Domain.Instructors;
@model List<InstructorDTO>

@{
    ViewData["Title"] = "Instructors";
}

@* <a type="button" class="btn btn-success"asp-controller="Instructors" asp-action="Create">Create</a> *@

<table id="instructors" class="table table-striped table-hover">
    <thead>
        <tr class="border-bottom">
            <th>ID Entrenador</th>
            <th>Full Name</th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var instructor in Model)
        {
            <tr>
                <td>@instructor.IdEntrenador</td>
                <td>@instructor.NombreCompleto</td>
                <td>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@instructor.IdEntrenador">Edit</a>
                    <button type="button" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>