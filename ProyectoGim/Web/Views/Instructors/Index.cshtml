@using Domain.Instructors;
@model List<InstructorDTO>

@{
    ViewData["Title"] = "Instructors";
}

@* <a type="button" class="btn btn-success"asp-controller="Instructors" asp-action="Create">Create</a> *@


<br />
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="leave-comment">
                    <div class="section-title">
                        <h2>INFORMACIÓN DEL CLIENTE</h2>
                        <span>LISTADO</span>
                        <br />
                        <br />
                        <a asp-controller="Instructors" asp-action="Create" class="primary-btn btn-normal appoinment-btn">
                            <i class="bg-info bi-file-plus-fill"></i>Registrar Instructor
                        </a>
                        <br />
                        <br />
                    </div>
                    <table id="instructor" class="table table-striped table-hover" style="color: white;">
                        <thead>
                            <tr class="border-bottom">
                                <th>Carnet de Entrenador</th>
                                <th>No. Cédula</th>
                                <th>Nombre Completo</th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var instructor in Model)
                            {
                                <tr>
                                    <td>@instructor.IdEntrenador</td>
                                    <td>@instructor.Cedula</td>
                                    <td>@instructor.NombreCompleto</td>
                                    <td>
                                        <a class="btn btn-info" asp-action="Update" asp-route-id="@instructor.IdEntrenador">Edit</a>
                                        @* <button type="button" class="btn btn-danger">Delete</button> *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

            