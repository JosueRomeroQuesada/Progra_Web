@using Domain.Ejercicios;
@model List<EjercicioDTO>

@{
    ViewData["Title"] = "Ejercicios";
}

<br />
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="leave-comment">
                    <div class="section-title">
                        <h2>INFORMACIÓN DE LOS EJERCICIOS</h2>
                        <span>LISTADO</span>
                        <br />
                        <br />
                        <a asp-controller="Ejercicios" asp-action="Create" class="primary-btn btn-normal appoinment-btn">
                            <i class="bg-info bi-file-plus-fill"></i>Agregar Ejercicio
                        </a>
                        <br />
                        <br />
                    </div>
                    <table id="ejercicios" class="table table-striped table-hover" style="color: white;">
                        <thead>
                            <tr class="border-bottom">
                                <th>ID Ejercicio</th>
                                <th>Nombre del ejericio</th>
                                <th>Descripcion</th>
                                <th>Zona</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ejercicio in Model)
                            {
                                <tr>
                                    <td>@ejercicio.IdEjercicio</td>
                                    <td>@ejercicio.Nombre</td>
                                    <td>@ejercicio.Descripcion</td>
                                    <td>@ejercicio.Zona</td>
                                    <td>
                                        <a class="btn btn-info" asp-action="Update" asp-route-id="@ejercicio.IdEjercicio">Editar</a>
                                        <a type="button" class="btn btn-danger" asp-controller="Ejercicios" asp-action="Delete" asp-route-id="@ejercicio.IdEjercicio">Borrar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

