<table id="clients" class="table table-striped table-hover">
    <thead>
        <tr class="border-bottom">
            <th>ID Cliente</th>
            <th>Full Name</th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var client in Model)
        {
            <tr>
                <td>@client.IdCliente</td>
                <td>@client.NombreCompleto</td>
                <td>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@client.IdCliente">Edit</a>
                    <button type="button" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>




