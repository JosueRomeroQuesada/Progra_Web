@using Domain.Clients;
@model List<ClientDTO>

@{
    ViewData["Title"] = "Clients";
}

<br />
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="leave-comment">
                    <div class="section-title">
                        <h2>INFORMACIÓN DEL CLIENTE</h2>
                        <span>LISTADO</span>
                        <br />
                        <br />
                        <a asp-controller="Clients" asp-action="Create" class="primary-btn btn-normal appoinment-btn">
                            <i class="bg-info bi-file-plus-fill"></i>Registrar Cliente
                        </a>
                        <br />
                        <br />
                    </div>
                    <table id="clients" class="table table-striped table-hover" style="color: white;">
                        <thead>
                            <tr class="border-bottom">
                                <th>ID Cliente</th>
                                <th>Nombre completo</th>
                                <th>Estatura (cm)</th>
                                <th>Peso (Kg)</th>
                                <th>Preferencias</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var client in Model)
                            {
                                <tr>
                                    <td>@client.IdCliente</td>
                                    <td>@client.NombreCompleto</td>
                                    <td>@client.Altura</td>
                                    <td>@client.Peso</td>
                                    <td>@client.Preferencias</td>
                                    <td>
                                        <a class="btn btn-info" asp-action="Update" asp-route-id="@client.IdCliente">Editar</a>
                                        @* <a type="button" class="btn btn-danger" asp-controller="Clients" asp-action="Delete" asp-route-id="@client.Id">Borrar</a> *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


