@using Domain.Rutinas;
@model List<RutinaDTO>

@{
    ViewData["Title"] = "Rutinas";
}

<br />
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="leave-comment">
                    <div class="section-title">
                        <h2>INFORMACIÓN DE LA RUTINA</h2>
                        <span>LISTADO</span>
                        <br />
                        <br />
                        <a asp-controller="Rutinas" asp-action="Create" class="primary-btn btn-normal appoinment-btn">
                            <i class="bg-info bi-file-plus-fill"></i>Registrar Rutina
                        </a>
                        <br />
                        <br />
                    </div>
                    <table id="rutinas" class="table table-striped table-hover" style="color: white;">
                    
                        <thead>
                            <tr class="border-bottom">
                                <th>ID Rutina</th>
                                <th>Descripción</th>
                                <th>Series</th>
                                <th>Repeticiones</th>
                                <th>Peso (Kg)</th>
                                <th>Actions</th>
                            </tr>

                        </thead>
                        <tbody>

                            @foreach (var rutina in Model)
                            {
                                <tr>
                                    <td>@rutina.IdRutina</td>
                                    <td>@rutina.Descripcion</td>
                                    <td>@rutina.Series</td>
                                    <td>@rutina.Repeticiones</td>
                                    <td>@rutina.Peso</td>

                                    <td>
                                        <a class="btn btn-info" asp-action="Update" asp-route-id="@rutina.IdRutina">Editar</a>
                                       @*  <a type="button" class="btn btn-danger" asp-controller="Rutinas" asp-action="Delete" asp-route-id="@rutina.Id">Borrar</a> *@
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
